generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Donor model

model Donor {
  id              String @id @default(uuid())
  firstname       String
  lastname        String
  email           String 
  password        String
  phoneNumber     String
  dateOfBirth     DateTime
  gender          Gender
  bloodType       String
  address         DonorAddress[] @relation("DonorToDonorAddress")
  weight          Int
  medicalHistory  MedicalHistory[] @relation("DonorToMedicalHistory")
  createdAt       DateTime @default(now())
  updatedAt       DateTime  @updatedAt
}

model DonorAddress {
  id          String @id @default(uuid())
  street      String
  city        String
  state       String
  postalCode  String
  donorId     String
  donor       Donor @relation("DonorToDonorAddress", fields: [donorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime  @updatedAt
}

model MedicalHistory {
  id                String @id @default(uuid())
  hasHypertension   Boolean
  hasDiabetes       Boolean
  hasHeartDisease   Boolean
  hasHIV            Boolean
  hasHepatitis      Boolean
  donorId           String
  donor             Donor @relation("DonorToMedicalHistory", fields: [donorId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime  @updatedAt
}

enum Gender {
  Male
  Female
}

